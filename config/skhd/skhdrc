# change window focus within space
alt - down : yabai -m window --focus south
alt - up : yabai -m window --focus north
alt - left : yabai -m window --focus west
alt - right : yabai -m window --focus east

# focus to another monitor
alt - s: yabai -m display --focus west
alt - g: yabai -m display --focus east

# rotate layout clockwise
shift + alt - r : yabai -m space --rotate 270
# flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis
# flip along x-axis
shift + alt - x : yabai -m space --mirror x-axis

# maximize a window
shift + alt - m : yabai -m window --toggle zoom-fullscreen
# balance out tree of windows (resize to occupy same area)
shift + alt - e : yabai -m space --balance

# swap windows
shift + alt - down : yabai -m window --swap south
shift + alt - up : yabai -m window --swap north
shift + alt - left : yabai -m window --swap west
shift + alt - right : yabai -m window --swap east

# move window and split
ctrl + alt - down : yabai -m window --warp south
ctrl + alt - up : yabai -m window --warp north
ctrl + alt - left : yabai -m window --warp west
ctrl + alt - right : yabai -m window --warp east

# move window to display left and right
shift + alt - s : yabai -m window --display west; yabai -m display --focus west;
shift + alt - g : yabai -m window --display east; yabai -m display --focus east;

# toggle layout
# alt + / to change layout to bsp
alt - 0x2C : yabai -m space --layout bsp
# alt + , to change layout to float
alt - 0x2B : yabai -m space --layout float

# resize window
# see https://github.com/koekeishiya/yabai/issues/200#issuecomment-1655195085

# resize window horizontally with alt + -/=
alt - 0x1B : yabai -m window --resize right:-20:0 2> /dev/null || yabai -m window --resize left:-20:0 2> /dev/null
alt - 0x18 : yabai -m window --resize right:20:0 2> /dev/null || yabai -m window --resize left:20:0 2> /dev/null

# resize window vertically with alt + shift + -/=
shift + alt - 0x1B : yabai -m window --resize bottom:0:-20 2> /dev/null || yabai -m window --resize top:0:-20 2> /dev/null
shift + alt - 0x18 : yabai -m window --resize bottom:0:20 2> /dev/null || yabai -m window --resize top:0:20 2> /dev/null

# Close window
alt - w : yabai -m window --close

# Open apps
alt - return : /opt/homebrew/bin/alacritty
alt - b : open -n -a "Google Chrome"