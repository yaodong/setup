"" Base Settings

" System clipboard integration
set clipboard+=unnamed

" Line numbers and cursor settings
set scrolloff=10
set relativenumber
set number
set cursorline
set cursorcolumn
set showmode
set showcmd

" Search settings
set smartcase
set incsearch
set hlsearch
set ignorecase
set inccommand=split
set grepformat=%f:%l:%c:%m

" Visual feedback
set visualbell
set showmatch
set matchtime=2
set list
set listchars=tab:→\ ,space:·,trail:·

" Indentation settings
set expandtab
set tabstop=2
set shiftwidth=2
set softtabstop=2
set autoindent
set smartindent
set breakindent
set showbreak=..

" Performance optimizations
set lazyredraw
set ttyfast
set timeoutlen=500
set ttimeoutlen=0

" File handling
set hidden
set nobackup
set nowritebackup
set noswapfile
set undofile
set undodir=~/.vim/undodir

" Completion settings
set completeopt=menu,menuone,noselect
set shortmess+=c
set pumheight=10

" Error handling
set noerrorbells
set novisualbell
set t_vb=
set tm=500

" Scrolling settings
set scrolloff=8
set sidescrolloff=8
set nowrap

" Status line
set laststatus=2
set statusline=%F%m%r%h%w\ [FORMAT=%{&ff}]\ [TYPE=%Y]\ [POS=%l,%v][%p%%]\ %{strftime(\"%d/%m/%y\ -\ %H:%M\")}

let mapleader = " "

"" Plugins
set surround
set highlightedyank
set sneak
set nerdtree
set multiple-cursors
set commentary
set auto-pairs
set matchit
set matchparen

" Easymotion settings
set easymotion
set notimeout

" Which-key settings
set which-key
